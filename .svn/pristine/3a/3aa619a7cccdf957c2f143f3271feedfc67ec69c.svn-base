<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_subscribe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--android:background="@drawable/grid_view_item_bg"-->

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:src="@drawable/clock" />

    <LinearLayout
        android:id="@+id/viewpager_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:minHeight="38.0dip"
            android:minWidth="72.0dip"
            android:padding="5dp"
            android:text="天气"
            android:textColor="@color/subscribe_item_text_color"
            android:textSize="14.0sp" />

    </LinearLayout>

</RelativeLayout>