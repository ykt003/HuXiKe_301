<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_58"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/light_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48"
        android:layout_below="@+id/item_head"
        android:background="@drawable/item_bg_selector"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15">

        <TextView
            android:id="@+id/item_key"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="key"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/item_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_86"
            android:layout_toRightOf="@+id/item_key"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="value"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/item_right_open" />
    </RelativeLayout>
</RelativeLayout>