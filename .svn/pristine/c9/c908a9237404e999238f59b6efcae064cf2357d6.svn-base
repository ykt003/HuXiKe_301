<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="90"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:src="@drawable/logo"
        android:textColor="@color/theme_background"
        android:textSize="36sp"
        android:textStyle="italic|bold"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_weight="0.5"
        android:layout_height="2dp"
        android:background="@color/theme_background"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9.5"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/theme_background"
        android:text="版权所有：北京瑞林萨尔科技有限公司"
        android:textSize="15sp"/>

</LinearLayout><!-- From: file:/C:/Users/ykt003/Desktop/working_copies/Fragment_301_huxike_android/app/src/main/res/layout/activity_loading.xml -->