<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>
    </style>

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#647b97</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>

    <style name="AcBar_titleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="title_bar_style">
        <!--<item name="android:background">@drawable/actionbar_background</item>-->
        <item name="android:background">@color/theme_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="vote_submit_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#7f7a62</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="vote_submit_btn_linear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="vote_submit_btn_image">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="vote_submit_btn_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/my_text_selector</item>
    </style>

    <style name="vote_submit_question">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="vote_submit_listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="text_18_ffffff">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- 闹铃 -->
    <style name="textview_allgrade_content">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCheckboxThemeSun" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clock_checkbox_selector_sun</item>
    </style>

    <style name="CustomCheckboxThemeMon" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clock_checkbox_selector_mon</item>
    </style>

    <style name="CustomCheckboxThemeSat" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clock_checkbox_selector_sat</item>
    </style>

    <style name="CustomCheckboxThemeTues" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clock_checkbox_selector_tues</item>
    </style>

    <style name="CustomCheckboxThemeWed" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clock_checkbox_selector_wed</item>
    </style>

    <style name="CustomCheckboxThemeThurs" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clock_checkbox_selector_thurs</item>
    </style>

    <style name="CustomCheckboxThemeFri" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clock_checkbox_selector_fri</item>
    </style>

    <style name="Theme.picker" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
